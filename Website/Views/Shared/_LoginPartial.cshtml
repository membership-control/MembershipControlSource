@using Microsoft.AspNet.Identity
@{
    using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
               @Html.ActionLink( User.Identity.GetUserName() + "", "ChangePassword", "Manage", new { area = "" }, htmlAttributes: new { title = "Manage" })
                @*@Html.ActionLink("Mock User" + "", "ChangePassword", "Manage", new { area = "" }, htmlAttributes: new { title = "Manage" })*@
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="icon-logout"></i></a></li>
        </ul>
    }
}
